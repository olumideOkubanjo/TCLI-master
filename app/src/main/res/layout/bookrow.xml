<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardBackgroundColor="#d9b3e7"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="5dp"
                                    app:cardUseCompatPadding="true"
                                    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/rTitleTv"
                  android:text="Title"
                  android:textColor="#000"
                  android:textSize="22sp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="262dp"
                   android:id="@+id/rImageView"
                   android:scaleType="centerCrop"
                   android:layout_gravity="center"
                   android:adjustViewBounds="true"
                   android:background="@drawable/loading_icon"
                   android:layout_height="264dp"/>

        <TextView android:layout_width="303dp"
                  android:id="@+id/rDescriptionTv"
                  android:textSize="20sp"
                  android:maxLength="200"
                  android:text="This will be the description of the post"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"/>
        <Button
                android:text="More"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="#ccb9d6"
                android:id="@+id/read_button"/>
    </LinearLayout>

</android.support.v7.widget.CardView>